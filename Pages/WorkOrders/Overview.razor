
@page "/workorders/overview"
@inject IWorkOrdersService Service

<h1>Dashboard</h1>

@if (Counts is null)
{
    <p>Loading...</p>
}
else
{
    <div class="grid">
        @foreach (var kv in Counts)
        {
            <div class="tile">
                <div class="metric">@kv.Value</div>
                <div class="label">@kv.Key</div>
            </div>
        }
    </div>
}

@code {
    private Dictionary<JobStatus, int>? Counts;
    protected override async Task OnInitializedAsync()
    {
        Counts = await Service.GetCountsByStatusAsync();
    }
}
